@model baitaplonchuyende.Models.ND

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_admin.cshtml";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
    }

   

    h2 {
        text-align: center;
        margin-bottom: 20px;
        color: #333;
    }

    .dl-horizontal {
        display: flex;
        flex-direction: column;
        margin: 0;
        padding: 0;
    }

        .dl-horizontal dt {
            font-weight: bold;
            margin-bottom: 5px;
            color: #555; /* Thay đổi màu chữ */
        }

        .dl-horizontal dd {
            margin-bottom: 15px;
            color: #333; /* Thay đổi màu chữ */
        }

    .btn-link {
        padding: 10px 15px;
        border-radius: 4px;
        background-color: #5bc0de; /* Màu xanh cho nút Edit */
        color: white;
        text-decoration: none;
        display: inline-block;
        margin-right: 5px;
    }

        .btn-link:hover {
            background-color: #31b0d5; /* Màu khi hover */
        }
</style>

<div class="details-container">
    <h2>Chi Tiết Sách</h2>

    <div>
        <h4>Thông Tin Sách</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>Nội dung</dt>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <dd>
            @Html.Raw(Model.Nd1)
          
            @Html.ValidationMessageFor(model => model.Nd1, "", new { @class = "text-danger" })
        </dd>
        </dl>

    </div>
    <p>
        @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = Model.Mand }, new { @class = "btn-link" }) |
        @Html.ActionLink("Quay về ", "Index", null, new { @class = "btn-link" })
    </p>
</div>

@section scripts {
    <script>
        CKEDITOR.replace("NoiDung");
    </script>
}